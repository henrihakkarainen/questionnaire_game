<div class="container">
    {{>messages}}
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"> <i class="fas fa-gamepad"></i> Remove questionnaire:
                        <br /> {{ game.title }}
                    </h3>
                </div>
                <div class="card-footer">
                    <form method="POST" action="/questionnaires/delete/{{ game.id }}">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </form>
                    <p class="lead mt-4"><a href="/questionnaires">Cancel</a></p>
                </div>
            </div>
        </div>
    </div>
</div>